                        <ScrollPane layoutX="8.0" layoutY="50.0" prefHeight="545.0" prefViewportHeight="200.0" prefViewportWidth="200.0" prefWidth="585.0">
                            <content>
                                <TextArea fx:id="logResult" layoutX="8.0" layoutY="50.0" prefHeight="542.0" prefWidth="583.0" />
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Options">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <Button id="FileButton" layoutX="499.0" layoutY="14.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="87.0" text="File"
